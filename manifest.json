{
  "manifest_version": 3,
  "name": "红薯AI养号助手",
  "version": "1.0.0",
  "description": "自动化小红薯养号操作笔记，结合AI智能决策。所有配置集中在美观的弹窗界面。",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "debugger"
  ],
  "host_permissions": [
    "https://www.xiaohongshu.com/*"
  ],
  "optional_host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.xiaohongshu.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
